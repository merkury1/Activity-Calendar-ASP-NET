@model ViewsModel.ActivityViewModel
@{
    ViewData["Title"] = "Archiwum";
}

<h2>To Do List - Archiwum</h2>

@foreach (var activity in Model.Activities)
{
    <partial name="_Summary" model="activity" />
}

@for (int i = 1; i < @Model.TotalPages + 1; i++)
{
    if (i == Model.CurrentPage)
    {
        <a asp-action="Archive" asp-route-pageId="@i" class="btn btn-primary">@i</a>
    }
    else
    {
        <a asp-action="Archive" asp-route-pageId="@i" class="btn btn-default">@i</a>
    }

}