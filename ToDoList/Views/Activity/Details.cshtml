@model ToDoList.Core.Models.Activity
@{
    ViewData["Title"] = Model.Title;
}

<h2>To Do List - szczegóły</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Title</h3>
    </div>
    <div class="panel-body">
        <div>
            Data: @Model.Date
        </div>
        <div>
            Szczegóły: @Model.Note
        </div>
    </div>
    <div class="panel-footer">
        <div>
            Priorytet: @Model.Priority.GetEnumDisplayName()
        </div>
    </div>
</div>