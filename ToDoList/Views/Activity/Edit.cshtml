@model ToDoList.Api.ViewsModel.ActivityEditViewModel
@{
        ViewData["Title"] = "Edycja";
    }

@if (Model.Activity.Id == 0)
{
    <h3>Nowa notatka</h3>
}
else
{
    <h3>@Model.Activity.Title (@Model.Activity.Date.ToString("dd.MM.yyyy HH:mm"))</h3>
}

<form method="post">
    <input type="hidden" asp-for="@Model.Activity.Id" />
    <div class="form-group">
        <label asp-for="@Model.Activity.Title"></label>
        <input asp-for="@Model.Activity.Title" />
        <span class="text-danger" asp-validation-for="@Model.Activity.Title"></span>
    </div>
    <div class="form-group">
        <label class="ActivityNoteLabel" asp-for="@Model.Activity.Note"></label>
        <textarea class="ActivityNote" asp-for="@Model.Activity.Note"> </textarea>
        <span class="text-danger" asp-validation-for="@Model.Activity.Note"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Activity.Date"></label>
        <input asp-for="@Model.Activity.Date" asp-format="{0:dd.MM.yyyy HH:mm:ss}" />
        <span class="text-danger" asp-validation-for="@Model.Activity.Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Activity.Priority"></label>
        <select class="form-control" id="PrioritySelection" asp-for="@Model.Activity.Priority"
                asp-items=@Model.Priorities></select>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}